<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Helperland</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <header>
        <div class="wrapper " id="sidebar-provider">
            <nav id="sidebar">
                <div class="container-fluid">
                    <div class="row row1">
                        <b> Welcome,Sandeep.</b>
                    </div>
                    <div class="row row2">
                        <ul class="nav nav-tabs flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link " data-bs-toggle="tab" href="#dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#newservicerequests">New Service Requests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab"
                                   href="service_provide_upcoming_service.html">
                                    Upcoming
                                    Services
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#serviceschedule">Service Schedule</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="customer_service_history.html">
                                    Service
                                    History
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#myratings">My Ratings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#blockcustomer">Block Customer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#blockcustomer">Invoices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#blockcustomer">My Settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#blockcustomer">Log Out</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row row3">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="#" asp-action="#">Book a Cleaner</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"asp-area="" asp-controller="publicpages" asp-action="PRICES">Prices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="#" asp-action="#">Our Guarantee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="#" asp-action="#">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link"asp-area="" asp-controller="publicpages" asp-action="CONTACT">Contact Us</a>
                            </li>

                            <!-- Modal popup for login -->
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#myModal">Login </a>

                                <!-- The Modal -->
                                <div class="modal model-for-completion-order" id="myModal">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h3 class="modal-title" id="popup-loginLabel">
                                                    <b>Login to your account</b>
                                                </h3>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <!-- Modal body -->
                                            <div class="modal-body login-popup">
                                                <div class="input-group mb-3">
                                                    <input type="email" class="form-control" placeholder="Email"
                                                           name="Email" style="border-right: none;">
                                                    <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <input type="password" class="form-control" placeholder="Password"
                                                           name="Password" style="border-right: none;">
                                                    <span class="input-group-text"> <i class="fas fa-lock"></i></span>
                                                </div>
                                                <input class="form-check-input ml-1" type="checkbox" id="myCheck" name="remember"
                                                       required>
                                                <label class="form-check-label ml-4" for="myCheck">
                                                    Remeber me
                                                </label>
                                                <br><br>
                                                <button type="submit" class="btn  login-btn"> Login </button>
                                                <br><br>
                                                <p class="logim-para">
                                                    <a href="#" class="login-para-links"
                                                       data-bs-target="#exampleModalToggle2"
                                                       data-bs-toggle="modal"><b>Forgoet Password ?</b></a>
                                                    <br>
                                                    Don't have an account?
                                                    <br>
                                                    <a asp-area="" asp-controller="Home" asp-action="CREATE_ACCOUNT" target="_blank"
                                                       class="login-para-links">
                                                        <b>
                                                            Create an
                                                            account
                                                        </b>
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Second model for forget password-->
                                <div class="modal fade" id="exampleModalToggle2" aria-hidden="true"
                                     aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3 class="modal-title" id="popup-loginLabel">
                                                    <b> Forgot Password </b>
                                                </h3>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="input-group mb-3">
                                                    <input type="email" class="form-control" placeholder="Email"
                                                           name="Email" style="border-right: none;">
                                                    <span class="input-group-text"> <i class="fas fa-user"></i> </span>
                                                </div>
                                                <br>
                                                <button type="submit" class="btn  login-btn"> Send </button>
                                                <br><br>
                                                <p class="logim-para">
                                                    <a href="#" class="login-para-links" data-bs-target="#myModal"
                                                       data-bs-toggle="modal">
                                                        <b>
                                                            Log
                                                            in
                                                        </b>
                                                    </a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Second model for forget password-->
                            </li>
                            <!-- Modal popup for login -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="service_provider">Become a Helper</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row4">
                        <img class="socialmedia" src="../images/facebook-mobile-menu.png" alt="">
                        <img class="socialmedia" src="../images/instagram-mobile-menu.png" alt="">
                    </div>
                </div>
                <div id="dismiss">
                    <i class="fas fa-arrow-left"></i>
                </div>
            </nav>
            <div id="nevbar">
                <section class="header small-nav" id="">
                    <nav class="navbar navbar-expand-lg navbar-dark mynav" id="header"
                         style="position: fixed; width: 100%; z-index: 1;">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="../images/logo-small.png" alt="" class="ml-1"></a>

                        <button class="navbar-toggler" id="sidebarCollapse" type="button">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 ">
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary text-white"asp-area="" asp-controller="#" asp-action="#">Book a Cleaner</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"  asp-area="" asp-controller="publicpages" asp-action="PRICES">Prices</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"asp-area="" asp-controller="#" asp-action="#">Our Guarantee</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="#" asp-action="#">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"  asp-area="" asp-controller="publicpages" asp-action="CONTACT">Contact Us</a>
                                </li>
                                <!-- Modal popup for login -->
                                <li class="nav-item">
                                    <!-- Button trigger modal -->
                                    <a class="nav-link-login btn btn-primary text-white navbar-login-btn" href="#"
                                       data-bs-toggle="modal" data-bs-target="#myModal">Login</a>
                                   
                                </li>
                                <!-- Modal popup for login -->
                                <li class="nav-item">
                                    <a class="nav-link btn btn-primary text-white"
                                       style="padding-left: 15px;padding-right: 15px;" asp-area="" asp-controller="Home" asp-action="service_provider">
                                        Become a Helper
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </section>
            </div>
            <div class="overlay"></div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer>
        <!-- footer section -->
        <section class="container-fluid" id="footer">
            <div class="row align-self-center">
                <div class="col-md-2 col-sm-4 text-center text-sm-end ">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="img-fluid my-3" src="../Imgs/white-logo-transparent-background.png" height="92" width=120
                             alt="" srcset="">
                    </a>
                </div>
                <div class="col-md-8 col-sm-4">
                    <div class="container my-1 my-md-5">
                        <div class="row justify-content-center text-center">
                            <div class="col-lg-1 foot-text"> <a asp-area="" asp-controller="Home" asp-action="Index">HOME</a></div>
                            <div class="col-lg-1 foot-text"><a asp-area="" asp-controller="publicpages" asp-action="ABOUT">ABOUT</a></div>
                            <div class="col-lg-2 foot-text">TESTIMONIALS</div>
                            <div class="col-lg-1 foot-text"><a  asp-area="" asp-controller="publicpages" asp-action="FAQ">FAQS</a></div>
                            <div class="col-lg-2 foot-text">INSURANCE POLICY</div>
                            <div class="col-lg-1 foot-text">IMPRESSUM</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-sm-4 text-center mb-2 mb-sm-0">
                    <img class="img-fluid my-1 my-sm-5" src="../Imgs/ic-facebook.png" height="20" width="10" alt=""
                         srcset="">
                    <img class="img-fluid my-1 my-sm-5 mx-3" src="../Imgs/ic-instagram.png" height="20" width="20" alt=""
                         srcset="">
                </div>
                <div class="row-bottom justify-content-lg-center text-center" style="font-size: 16px;">
                    <div>
                        ©2018 Helperland. All rights reserved. <a href="" class="row-bottom">
                            Terms
                            and Conditions
                        </a> | <a href="" class="row-bottom">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- footer section -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!--Script for side bar-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

    <script src="~/js/site.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
