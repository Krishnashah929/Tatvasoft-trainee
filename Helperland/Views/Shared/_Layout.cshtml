                     <ul class="navbar-nav ms-auto  mb-lg-0" style="margin-right: 3%;">
                        <li class="nav-item">
                           <a class="nav-link btn btn-primary text-white btn-active" asp-area="" asp-controller="CustomerPages" asp-action="BOOK_NOW">Book a Cleaner</a>
                        </li>
                        <li class="nav-item active" style="margin-left: 15px;">
                           <a class="nav-link btn text-white" asp-area="" asp-controller="publicpages" asp-action="PRICES">Price & services</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link btn text-white" asp-area="" asp-controller="#" asp-action="#">Our Guarantee</a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link btn text-white" asp-area="" asp-controller="#" asp-action="#">Blog </a>
                        </li>
                        <li class="nav-item">
                           <a class="nav-link btn text-white" asp-area="" asp-controller="publicpages" asp-action="CONTACT">Contact </a>
                        </li>
                        @if (Context.Session.GetString("Userlogeddin") != null)
                        {
               <li class="vr" style="color: white; "> </li>
                           <li class="nav-item dropdown notification-icon" style="margin-left: 20px;">
                              <a class=" nav-notification" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                                 aria-expanded="false">
                                 <img src="../images/icon-notification.png" alt="notification">
                              </a>
                           </li>
                                       <li class="vr" style="color: white;"> </li>
                                                   <li class="nav-item dropdown" style="margin-left: 20px;">
                                                      <a class=" " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                         <img src="../images/user.png" alt="Flag"> <i class="bi bi-chevron-down"></i>
                                                      </a>
                                                      <ul class="dropdown-menu dropdown-menu-end dropdown-service-history" aria-labelledby="navbarDropdown">
                                                         <li class="dropdown-service-history-header"> Welcome, ,<br /> <b>@Context.Session.GetString("Name")</b> </li>
                                                         <hr>
                                                         <li> <a asp-controller="CustomerPages" asp-action="Customer_Dashboard" style="color: #4f4f4f;">My Dashboard</a></li>
                                                         <li> <a href="mysetting.html" style="color: #4f4f4f;"> My settings </a>  </li>
                                                         <li> <a asp-controller="Home" asp-action="LogOut" style="color: #4f4f4f;">Logout</a> </li>
                                                      </ul>
                                                   </li>
 }
                                                else
                                                {
                                       <li class="nav-item"><a class="nav-link-login btn btn-primary text-white navbar-login-btn btn-active" href="#" data-bs-toggle="modal" data-bs-target="#myModal">Login</a> </li>
                                                   <li class="nav-item"><a class="nav-link btn btn-primary text-white become-helper-nav-btn btn-active" asp-area="" asp-controller="Home" asp-action="service_provider">Become a Helper</a>  </li>}
                     </ul>
                  </div>
               </nav>
            </section>
         </div>
         <div class="overlay"></div>
