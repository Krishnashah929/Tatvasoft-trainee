                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    <div class="form-group-service-provider">
                        <input type="password" asp-for="Password" class="form-control" id="inputpwd" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group-service-provider">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="inputconfirm-password" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
