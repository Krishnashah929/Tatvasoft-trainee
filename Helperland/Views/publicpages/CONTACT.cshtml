@using Helperland.Models
@model ContactU  
 

@{
    Layout = "_Layout";
}
<img src="../images/group-16_2.png" alt="" class="main-img">
<div class="container-fluid">
    <section class="line-star">
        <h5 class="main-heading contact-heading"> Contact us</h5>
        <div class="row row2 justify-content-center contact-line m-1">
            <div class="line"></div>
            <img class="px-0" id="separator" src="../images/separator.png" alt="">
            <div class="line"></div>
        </div>
    </section>
    <!--contact page first part-->
    <!--3-symbols-->
    <section class="3-symbols">
        <div class="row justify-content-center symbols-3">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="card about-card-1">
                    <div class="card-header align-self-center">
                        <img src="../images/forma-1_2.png" alt="">
                    </div>
                    <div class="card-body align-self-center">
                        <p>1111 Lorem ipsum text 100,<br> Lorem ipsum AB</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="card about-card-1">
                    <div class="card-header align-self-center">
                        <img src="../images/phone-call.png" alt="">
                    </div>
                    <div class="card-body align-self-center">
                        <p>
                            +49 (40) 123 56 7890
                            <br>
                            +49 (40) 987 56 0000
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="card about-card-1">
                    <div class="card-header align-self-center">
                        <img src="../images/vector-smart-object.png" alt="">
                    </div>
                    <div class="card-body align-self-center">
                        <p>
                            info@helperland.com
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--3-symbols-->
    <br>
    <hr class="hr-line">
    <!--line-star-->
    <section class="line-star">
        <h5 class="main-heading" style="margin-top:80px;"> Get in touch with us</h5>
    </section>
    <!--line-star-->
    <!--Get in touch with us form-->
    <section id="get-in-touch-form" class="get-in-touch-form">
        <div class="text-success text-center">
            @ViewBag.Message
        </div>
        <form class="row g-3 " enctype="multipart/form-data" style="width:50%; margin-left: 25%;" method="post" asp-controller="publicpages" asp-action="CONTACT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <input type="text" asp-for="Name" class="form-control" id="inputfirstname" placeholder="First Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="text" asp-for="Name" class="form-control" name="lastname" placeholder="Last Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="number" asp-for="PhoneNumber" class="form-control" id="inputnumber" placeholder="Phone number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="email" asp-for="Email" class="form-control" id="inputemail" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <select id="inputState" class="form-select" style="color: #a0a0a0;" asp-for="Subject">
                    <option selected>Subject</option>
                    <option>General</option>
                    <option>Inquiry</option>
                    <option>Random</option>
                    <option>Renewal</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <textarea class="form-control" id="inputmessage" asp-for="Message" rows="3" placeholder="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-check ml-1">
                
               <label class="form-check-label-contact mt-1" for="myCheck5">
                  <input class="form-check-input" type="checkbox" id="myCheck5" name="remember" required>
                  Our current <a href="#" style="color: #2f8799;"> data protection</a> data protection regulations apply . I hereby agree that my data entered in the contact form will be stored electronically and processed and used for the purpose of establishing contact. The consent can be revoked at any time in accordance with Art. 7 Para. 3 GDPR by informal notification (e.g. by e-mail).
               </label>
            </div>

            <div class="col-12">
                <button type="submit" class="btn submit-button">Submit</button>
            </div>
        </form>
    </section>
    <!--Get in touch with us form-->
    <!--Google map-->
    <section id="google-map">
        <div class="row google-map">
            <div class="col-12">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="1500" height="400" id="gmap_canvas"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d235014.25792080228!2d72.43965601422856!3d23.020181763113136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e848aba5bd449%3A0x4fcedd11614f6516!2sAhmedabad%2C%20Gujarat%2C%20India!5e0!3m2!1sen!2sus!4v1643106448033!5m2!1sen!2sus"
                                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://123movies-to.org"></a><br>
                        <a href="https://www.embedgooglemap.net"> </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Google map-->
    <!--Newsletter-->
    <section id="wht-customer-say" style="background-color: white;">
        <div class="row justify-content-center" id="row3">
            <div class="col-md-12 col-sm-8 order-1 order-sm-2">
                <div class="container-fluid mx-0 px-0">
                    <div class="row mx-0 px-0 text-center ">
                        <p class="title mb-1">GET OUR NEWSLETTER</p>
                    </div>
                    <div class="row justify-content-center newslatter-button">
                        <div class="col-sm-auto p-0 newletter-input">
                            <input class="form-control" type="email" name="" id="" placeholder="YOUR EMAIL">
                        </div>
                        <div class="col-sm-1 py-2 py-sm-0 newletter-input">
                            <button class="btn" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Newsletter-->
</div>
 