                  <div class="col-md-4">
                     <label for="oldpassword" class="form-label">Old password</label>
                     <input type="password" class="form-control" id="oldpassword" placeholder="Current Password">

                  </div>
               </div>
               <div class="row mt-3">
                  <div class="col-md-4">
                     <label for="newpassword" class="form-label">New password </label>
                     <input type="password" class="form-control" id="newpassword" placeholder="New Password">
                     <span asp-validation-for="NewPassword" class="text-danger"> </span>
                  </div>
               </div>
               <div class="row mt-3">
                  <div class="col-md-4">
                     <label for="repeatpassword" class="form-label"> Repeat password  </label>
                     <input type="password" class="form-control" id="repeatpassword" placeholder="Confirm Password">
                     <span asp-validation-for="Password" class="text-danger"> </span>
                  </div>
               </div>
               <div class="row mt-4">
                  <div class="col-md-3">
                     <button type="submit" class="btn save-detail-button" onclick="updatepw(this)">
