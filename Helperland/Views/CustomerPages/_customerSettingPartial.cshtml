                  <tr>
                     <th scope="col" class="col-md-6 address-table-head2-setting"> Addresses </th>
                     <th scope="col" class="col-md-3 address-table-head3-setting"> Action </th>
                  </tr>
               </thead>
               <tbody>
                  @foreach (UserAddress dbs in Address)
                  {
                     <tr>
                        <td>
                           <span>
                              <b>Address:</b> @dbs.AddressLine1 , @dbs.AddressLine2
                              <br>
                              <b>Telephone number:</b> @dbs.Mobile
                           </span>
                        </td>
                        <td style="text-align: center;">
                           <a href="#" data-bs-toggle="modal" onclick="editadd(this);" data-bs-target="#myModalforaddress" data-id="@dbs.AddressId">
                              <i class="far fa-edit edit-icon-setting"></i>
                           </a>
                           <a href="#" data-bs-toggle="modal" onclick="deladd(this);" data-bs-target="#myModaldeleteaddress" data-id="@dbs.AddressId">
