               <input type="hidden" class="form-control" value="@userdetails.Password" name="Password" id="storepassword" style="border-right: none;" required>

               <div class="row mt-3">
                  <div class="col-md-4">
                     <label for="oldpassword" class="form-label">Old password</label>
                     <input type="password" class="form-control" id="oldpassword" placeholder="Current password" onblur="fnRemoveValidationOnChange(this);">
